# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build express`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t express`.

# This is an example of docker target using nx.
# it has not been tested.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system express && \
          adduser --system -G express express

COPY dist/apps/express express
RUN chown -R express:express .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix express --omit=dev -f install

CMD [ "node", "express" ]
