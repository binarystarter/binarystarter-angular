{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@express": ["apps/express/*"],
      "@web": ["apps/web/*"],
      "@binarystarter-angular/angular": ["libs/angular/src/index.ts"],
      "@binarystarter-angular/shared-constants": [
        "libs/shared-constants/src/index.ts"
      ],
      "payload/generated-types": ["libs/shared-types/src/payload-types.ts"],
      "react": ["./node_modules/@types/react"],
      "@binarystarter-angular/shared-types": ["libs/shared-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
